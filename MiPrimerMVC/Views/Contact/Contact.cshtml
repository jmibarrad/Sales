@using CaptchaMvc.HtmlHelpers
@model MiPrimerMVC.Models.ContactModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Sales|JMID: Contact</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/TmpLogin/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/TmpLogin/styles/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/TmpLogin/css/preview.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css' />
    <link href="~/TmpLogin/styles/font-awesome.min.css" rel="stylesheet" />


    <!--[if IE 7]>
        <link href="styles/font-awesome-ie7.min.css" rel="stylesheet" />
    <![endif]-->
    <!--[if IE 8]>
        <style type="text/css">
        .navbar-inner{
            filter:none;
        }
         </style>
        <![endif]-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <div class="divider large visible-desktop"></div>
    <div class="row-fluid" id="demo-1">
        <div class="span10 offset1">
            <div class="tabbable custom-tabs tabs-animated  flat flat-all hide-label-980 shadow track-url auto-scroll">
                <ul class="nav nav-tabs">
                    <li><a href="~/Classifieds/MostVisited" style="background-color:black; border: whitesmoke"><i class=" icon-home" style="color:white"></i></a></li>
                    <li><a href="~/AccountLogin/Login"><i class="icon-lock"></i>&nbsp;<span>Login Panel</span></a></li>
                    <li><a href="~/Register/Register"><i class="icon-user"></i>&nbsp;<span>Register Panel</span></a></li>
                    <li><a href="~/ForgotPassword/ForgotPassword"><i class="icon-key"></i>&nbsp;<span>Forgot Password</span></a></li>
                    <li class="active"><a href="#panel4"><i class="icon-envelope-alt"></i>&nbsp;<span>Contact Us</span></a></li>
                </ul>
                <div class="tab-content ">
                    <div class="tab-pane" id="panel1">
                 
                    </div>
                    <div class="tab-pane" id="panel2">
                 
                    </div>

                    <div class="tab-pane" id="panel3">
                    </div>
                    
                    <div id="panel4" class="tab-pane active">
                        <div class="row-fluid">
                            <div class="span5">
                                <h4><i class="icon-envelope-alt"></i>&nbsp;&nbsp;Contact Us</h4>
                                @{
                                    var dropdownItems = new List<SelectListItem>();
                                    dropdownItems.AddRange(new[]{
                                    new SelectListItem { Text = "Information" },
                                    new SelectListItem { Text = "Important" },
                                    new SelectListItem { Text = "Failure" },
                                    new SelectListItem { Text = "Complaint" }});
                                    ViewData.Add("DropDownItems", dropdownItems);
                                }
                                @using (Html.BeginForm("Contact", "Contact", null, FormMethod.Post, new { @class = "form-horizontal" }))
                                {
                                   
                                <label>Name</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "input-block-level"})
                                <label style="color:red">@Html.ValidationMessageFor(x=>x.Name)</label>

                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "input-block-level", placeholder="First.Last@example.com"})
                                <label style="color:red">@Html.ValidationMessageFor(x=>x.Email)</label>

                               var captcha = Html.Captcha("Refresh", "Input", 5, "Is required field.", false);
                                
                               <label>Subject</label>
                                @Html.DropDownListFor(x => x.Subject, ViewData["DropDownItems"] as List<SelectListItem>, new {@class ="dropdown"})
                                <label>Message</label>
                                @Html.TextAreaFor(x => x.Message, new { @class = "input-block-level", @rows = "4"})
                                <label style="color:red">@Html.ValidationMessageFor(x=>x.Message)</label>

                                    
                                  <br/>
                                  @captcha
                                  <p style="color:red">
                                    @Html.ValidationMessage(captcha.BuildInfo.InputElementId, new { @style = "width:50px" })
                                  </p>    
                                 <button class=" btn  " type="submit">Send Message&nbsp;&nbsp;&nbsp;<i class=" icon-chevron-sign-right"></i></button>
                                }
                                <br class="visible-phone" />
                            <br class="visible-phone" />
                               
                            </div>
                            <div class="span7">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <h4><i class="icon-location-arrow"></i>&nbsp;&nbsp;Locate Us</h4>
                                        <!--MAp starts here-->
                                        <div class="col-xs-10 col-sm-6">
                                            <div class="box">
                                                <div class="box-header">
                                                    <div class="box-name">
                                                        <i class="fa fa-map-marker"></i>
                                                        <span>OpenStreetMap</span>
                                                    </div>
                                                    <div class="box-icons">
                                                        <a class="collapse-link">
                                                            <i class="fa fa-chevron-up"></i>
                                                        </a>
                                                        <a class="expand-link">
                                                            <i class="fa fa-expand"></i>
                                                        </a>
                                                        <a class="close-link">
                                                            <i class="fa fa-times"></i>
                                                        </a>
                                                    </div>
                                                    <div class="no-move"></div>
                                                </div>
                                                <div id="map-1" class="box-content" style="height: 200px">
                                                </div>
                                            </div>
                                        </div>
                                        <!--Map ends here-->
                                        <!--<div class="map"></div>-->

                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6">
                                        <h4><i class="icon-envelope-alt"></i>&nbsp;&nbsp;Contact Us</h4>
                                        <address>
                                            <strong>Full Name</strong><br />
                                            <p style="font-family:Arial; text-decoration: underline">José Mario Ibarra</p>
                                            <a href="mailto:#">jmibarrad@gmail.com</a>
                                        </address>
                                    </div>
                                    <div class="span6">
                                        <h4><i class="icon-location-arrow"></i>&nbsp;&nbsp;Our Address</h4>

                                        <address>
                                            <strong>Sales | JMID, Inc.</strong><br/>
                                            795 Folsom Ave, Suite 600<br/>
                                            San Pedro Sula, Cortes 2349<br/>
                                            <abbr title="Phone">P:</abbr>
                                            (504) 999-1234
                                        </address>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="divider"></div>
    <script src="~/TmpLogin/scripts/jquery-1.9.1.min.js"></script>
    <script src="~/TmpLogin/scripts/bootstrap.min.js"></script>
    <script src="~/TmpLogin/scripts/tabs-addon.js"></script>
    <!--End Container-->
    
    
    <!--<script src="~/devoops/plugins/justified-gallery/jquery.justifiedgallery.min.js"></script>
    --><!--<script src="~/devoops/plugins/tinymce/tinymce.min.js"></script>
    --><script src="~/devoops/plugins/tinymce/jquery.tinymce.min.js"></script>
    <!-- All functions for this theme + document.ready processing -->
    <script src="~/Scripts/devoops.js"></script>
    <script type="text/javascript" src="~/Scripts/backsketch.js"></script>
    <script>
        $.backstretch("http://fc05.deviantart.net/fs71/f/2014/127/0/6/adminex_featuredescription_by_themebucket-d7hgq7q.jpg");
    </script>
    <script type="text/javascript">
        // Load OpenLayers library and create map
        function OpenLayersMap() {
            LoadOpenLayersScript(LoadTestMap);
        }
        $(document).ready(function () {
            // Load Google Map API and load OpenLayers in callback
            $.getScript('http://maps.google.com/maps/api/js?sensor=false&callback=OpenLayersMap');
            // Add Drag-n-Drop feature
            WinMove();
        });
    </script>
</body>
</html>
